@model IEnumerable<asgn2.Models.Recipes>

@{

}


@foreach (var r in Model)
{
    <h3>@r.Name</h3>
    <img class="builtPic" src="@Url.Content(r.imagePath)" /><br />
    @if (r.RecipeCategory == 1) //Fish
    {
        <img class="detailPic" src="@Url.Content("/Pictures/fish.jpg")" />
    }
    else if (r.RecipeCategory == 2) //Beef
    {
        <img class="detailPic" src="@Url.Content("/Pictures/steak.jpg")" />
    }
    else if (r.RecipeCategory == 3) //Chicken
    {
        <img class="detailPic" src="@Url.Content("/Pictures/chiken.png")" />
    }
    <h5>@r.Ingredients</h5>
    <p>@r.Description</p>

}
